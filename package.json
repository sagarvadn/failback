{
  "name": "failback",
  "version": "1.0.1",
  "description": "A Dynamic Content Fallback Manager",
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "test": "jest --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,md}'",
    "prepare": "husky install",
    "start": "node dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "dynamic",
    "fallback",
    "cache",
    "react",
    "nextjs"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@sagarvadn"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sagarvadn/failback.git"
  },
  "bugs": {
    "url": "https://github.com/sagarvadn/failback/issues/"
  },
  "homepage": "https://github.com/sagarvadn/failback#readme",
  "author": "Sagar Vadnere",
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "rollup": "^4.28.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
